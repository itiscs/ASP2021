<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.ItemPage">
    <ContentPage.Content>
        <StackLayout>
            <Label FontSize="Large" Text="Item To Do!" HorizontalOptions="CenterAndExpand" />
            <Label Text="{Binding Id}" FontSize="Large"/>
            <Label Text="{Binding Name}" FontSize="Large"/>
            <Switch IsToggled="{Binding IsComplete}" />
            <Button x:Name="btnSave" Text="Save" Clicked="btnSave_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>